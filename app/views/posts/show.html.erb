<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-white text-center shadow bg-info mb-3">
        <div class="card-header bg-transparent border-white"><%=@post.title%></div>
        <div class="card-body text-white">
          <h5 class="card-title"><%=@post.title%></h5>
          <p class="card-text"><%=@post.description%></p>
        </div>
        <div class="card-footer bg-transparent border-white">
          <%= link_to "Edit",edit_post_path,class:"btn btn-outline-warning" %>
          <%= link_to "Delete",post_path,class:"btn btn-outline-warning",method: :delete %>
        </div>
      </div> 
      <%= render 'comments/allcomments' %>
      <%= render 'comments/form' %>
    </div>
  </div>
</div>
